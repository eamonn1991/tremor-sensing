<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chenz_000.myapplication.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/et_email"
        android:layout_width="289dp"
        android:layout_height="38dp"
        android:ems="10"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:layout_marginTop="315dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@+id/b_send"
        app:layout_constraintLeft_toLeftOf="@+id/b_send"
        app:layout_constraintHorizontal_bias="0.502" />

    <EditText
        android:id="@+id/et_subject"
        android:layout_width="288dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="subject"
        android:inputType="textPersonName"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        app:layout_constraintLeft_toLeftOf="@+id/b_send"
        app:layout_constraintRight_toRightOf="@+id/b_send"
        app:layout_constraintHorizontal_bias="0.505" />

    <EditText
        android:id="@+id/et_message"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:ems="10"
        android:gravity="left"
        android:hint="message"
        android:inputType="textMultiLine"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/et_subject"
        app:layout_constraintLeft_toLeftOf="@+id/et_subject"
        app:layout_constraintRight_toRightOf="@+id/et_subject"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/b_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND EMAIL"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/et_email"
        android:layout_marginStart="2dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/acc_result"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginLeft="128dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/acc_result"
        android:layout_width="313dp"
        android:layout_height="155dp"
        android:layout_marginTop="71dp"
        android:text="Welcome! View the time, acceleration and duration of your tremors here. You can also manually email your doctor or other emergency contacts below."
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

</android.support.constraint.ConstraintLayout>
