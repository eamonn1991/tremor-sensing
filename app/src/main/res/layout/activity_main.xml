<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chenz_000.myapplication.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/time_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/dur_result"
        app:layout_constraintRight_toRightOf="@+id/dur_result"
        app:layout_constraintTop_toBottomOf="@+id/dur_result"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/dur_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/acc_result"
        app:layout_constraintRight_toRightOf="@+id/acc_result"
        app:layout_constraintTop_toBottomOf="@+id/acc_result"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="289dp"
        android:layout_height="38dp"
        android:ems="10"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:layout_marginTop="315dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@+id/b_send"
        app:layout_constraintLeft_toLeftOf="@+id/b_send"
        app:layout_constraintHorizontal_bias="0.502" />

    <EditText
        android:id="@+id/et_subject"
        android:layout_width="288dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="subject"
        android:inputType="textPersonName"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        app:layout_constraintLeft_toLeftOf="@+id/b_send"
        app:layout_constraintRight_toRightOf="@+id/b_send"
        app:layout_constraintHorizontal_bias="0.505" />

    <EditText
        android:id="@+id/et_message"
        android:layout_width="288dp"
        android:layout_height="64dp"
        android:ems="10"
        android:gravity="left"
        android:hint="message"
        android:inputType="textMultiLine"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/et_subject"
        app:layout_constraintLeft_toLeftOf="@+id/et_subject"
        app:layout_constraintRight_toRightOf="@+id/et_subject"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/b_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND EMAIL"
        tools:layout_editor_absoluteY="239dp"
        tools:layout_editor_absoluteX="141dp" />

    <TextView
        android:id="@+id/acc_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="62dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

</android.support.constraint.ConstraintLayout>
